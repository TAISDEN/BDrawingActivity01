<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:background="#FFCCCCCC"
              android:clickable="true">
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:background="#ff000000"
        android:contentDescription="@string/paint"
        android:src="@drawable/paint"
        android:tag="#ff000000" android:id="@+id/color1"
        android:clickable="true"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:background="#ffff0000"
        android:contentDescription="@string/paint"
        android:src="@drawable/paint"
        android:tag="#ffff0000" android:id="@+id/color2" android:clickable="true"
        />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:background="#ff0000ff"
        android:contentDescription="@string/paint"
        android:src="@drawable/paint"
        android:tag="#ff0000ff" android:id="@+id/color3" android:clickable="true"
        />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:background="#ff00ff00"
        android:contentDescription="@string/paint"
        android:src="@drawable/paint"
        android:tag="#ff00ff00" android:id="@+id/color4" android:clickable="true"
        />
</LinearLayout>